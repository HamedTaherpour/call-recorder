<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.FontBold" parent="android:TextAppearance">
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="TextAppearance.FontLight" parent="android:TextAppearance">
        <item name="fontPath">@string/font</item>
    </style>

</resources>
